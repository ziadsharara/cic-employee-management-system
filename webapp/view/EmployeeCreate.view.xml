<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:form="sap.ui.layout.form"
  xmlns:core="sap.ui.core"
  controllerName="cic.cictrial.controller.EmployeeCreate"
  displayBlock="true">

  <Page title="Add New Employee" showNavButton="true" navButtonPress=".onNavBack">
    
    <!-- Header Actions -->
    <headerContent>
      <Button text="Save" press=".onSave" type="Emphasized" />
      <Button text="Cancel" press=".onNavBack" />
    </headerContent>

    <content>
      <Panel headerText="Employee Information" class="sapUiResponsiveMargin">
        <content>
          <form:SimpleForm 
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanL="3" 
            labelSpanM="3" 
            emptySpanL="4" 
            emptySpanM="4"
            columnsL="1" 
            columnsM="1">
            
            <form:content>
              <!-- Employee ID -->
              <Label text="Employee ID:" required="true" />
              <Input 
                id="employeeIdInput"
                value="{form>/id}" 
                placeholder="Enter Employee ID (e.g., E005)"
                liveChange=".onInputChange"
                valueState="{= ${form>/id} ? 'None' : 'Error' }"
                valueStateText="Employee ID is required"/>
              
              <!-- Full Name -->
              <Label text="Full Name:" required="true" />
              <Input 
                id="employeeNameInput"
                value="{form>/name}" 
                placeholder="Enter full name"
                liveChange=".onInputChange"
                valueState="{= ${form>/name} ? 'None' : 'Error' }"
                valueStateText="Employee name is required"/>
              
              <!-- Department -->
              <Label text="Department:" required="true" />
              <Select 
                id="departmentSelect"
                selectedKey="{form>/department}"
                change=".onInputChange"
                valueState="{= ${form>/department} ? 'None' : 'Error' }"
                valueStateText="Please select a department">
                <items>
                  <core:Item key="" text="Select Department" />
                  <core:Item key="IT" text="Information Technology" />
                  <core:Item key="HR" text="Human Resources" />
                  <core:Item key="Sales" text="Sales" />
                  <core:Item key="Marketing" text="Marketing" />
                  <core:Item key="Finance" text="Finance" />
                  <core:Item key="Fiori" text="Fiori Development" />
                </items>
              </Select>

              <!-- Position (Optional) -->
              <Label text="Position:" />
              <Input 
                id="positionInput"
                value="{form>/position}" 
                placeholder="Enter job position"
                liveChange=".onInputChange"/>

              <!-- Email -->
              <Label text="Email:" required="true"/>
              <Input 
                id="emailInput"
                value="{form>/email}" 
                placeholder="Enter email address"
                type="Email"
                liveChange=".onInputChange"
                valueState="{= ${form>/email} ? 'None' : 'Error' }"
                valueStateText="Valid email is required"/>
            </form:content>
          </form:SimpleForm>
        </content>
      </Panel>
    </content>
  </Page>
</mvc:View>