<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    controllerName="cic.cictrial.controller.EmployeeEdit">

    <Page title="Edit Employee" showNavButton="true" navButtonPress=".onNavBack">
        
        <!-- Header Actions -->
        <headerContent>
            <Button text="Save" press=".onSave" type="Emphasized" />
            <Button text="Cancel" press=".onNavBack" />
        </headerContent>

        <content>
            <!-- Employee Edit Form -->
            <Panel headerText="Employee Information" class="sapUiResponsiveMargin">
                <content>
                    <form:SimpleForm 
                        editable="true"
                        layout="ResponsiveGridLayout"
                        labelSpanL="3" 
                        labelSpanM="3" 
                        emptySpanL="4" 
                        emptySpanM="4"
                        columnsL="1" 
                        columnsM="1">
                        
                        <form:content>
                            <!-- Employee ID (Read Only) -->
                            <Label text="Employee ID:" />
                            <Input 
                                value="{edit>/id}" 
                                editable="false" />

                            <!-- Full Name -->
                            <Label text="Full Name:" required="true" />
                            <Input 
                                value="{edit>/name}" 
                                placeholder="Enter full name"
                                liveChange=".onInputChange" />

                            <!-- Department -->
                            <Label text="Department:" required="true" />
                            <Select 
                                selectedKey="{edit>/department}"
                                change=".onInputChange">
                                <items>
                                    <core:Item key="" text="Select Department" />
                                    <core:Item key="IT" text="Information Technology" />
                                    <core:Item key="HR" text="Human Resources" />
                                    <core:Item key="Sales" text="Sales" />
                                    <core:Item key="Marketing" text="Marketing" />
                                    <core:Item key="Finance" text="Finance" />
                                    <core:Item key="Fiori" text="Fiori Development" />
                                </items>
                            </Select>

                            <!-- Position -->
                            <Label text="Position:" />
                            <Input 
                                value="{edit>/position}" 
                                placeholder="Enter job position" />

                            <!-- Email -->
                            <Label text="Email:" />
                            <Input 
                                value="{edit>/email}" 
                                placeholder="Enter email address"
                                type="Email" />
                        </form:content>
                    </form:SimpleForm>
                </content>
            </Panel>

            <!-- Validation Messages -->
            <Panel headerText="Validation Messages" visible="{edit>/hasValidationErrors}" class="sapUiResponsiveMargin">
                <content>
                    <MessageStrip 
                        text="{edit>/validationMessage}" 
                        type="Error" 
                        visible="{edit>/hasValidationErrors}" />
                </content>
            </Panel>
        </content>
    </Page>
</mvc:View>
